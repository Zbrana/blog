<%- include ('./partials/header') %>

        <% for (var i = 0; i < blogs.length; i++) { %>
                <hr style="margin-top: 0px; margin-bottom: 0px; border-top: 2px solid rgb(240, 240, 240);">
                <% let titleTemp = blogs[i].title.split(' ').join('-'); %>
                <a id="textLink" href="/<%= titleTemp %>">
                <div class="row" id="row" style="padding-top: 50px; padding-bottom: 50px;">
                <div class="col-2 d-none d-xl-block">
                    <img style="width: 150px; height: 150px; border-radius: 10px;" src="<%= blogs[i].image %>">
                </div>
                <div class="col-2 d-none d-md-block">
                    <span>Date:</span><br>
                    <span style="font-family: 'Russo One', sans-serif;"><%= blogs[i].created.toDateString() %></span><br><br>
                    Reading Time:<br>
                    <span style="font-family: 'Russo One', sans-serif;"><%= blogs[i].reading%></span>
                </div>
                    <div class="col-6 d-block d-md-none">
                        <span>Date:</span><br>
                        <span style="font-family: 'Russo One', sans-serif;"><%= blogs[i].created.toDateString() %></span><br><br>
                        Reading Time:<br>
                        <span style="font-family: 'Russo One', sans-serif;"><%= blogs[i].reading %></span>
                    </div>
                    <div class="col-6 d-block d-md-none">
                        <img style="width: 150px; height: 150px; border-radius: 10px;" src="<%= blogs[i].image %>">
                    </div>
                <div class="col-xs-12 col-md-10 col-xl-8">
                    <br class="d-block d-md-none">
                    <h5 class="text-uppercase"><%= blogs[i].title %></h5>
                    <p><%- blogs[i].body.substring(0, 300) %>...</p>
                </div>
                </div>
                </a>
        <% } %>
    <br>
    <nav>
    <% if (pages > 0) { %>
        <ul class="pagination justify-content-center pg-dark">
            <% if (current == 1) { %>
                <li class="disabled page-item"><a class="page-link text-dark">First</a></li>
            <% } else { %>
                <li class="page-item"><a class="page-link text-dark" href="/articles/1">First</a></li>
            <% } %>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class="disabled page-item"><a class="page-link text-dark">...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                    <li class="active page-item"><a class="page-link text-dark"><%= i %></a></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link text-dark" href="/articles/<%= i %>"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="disabled page-item"><a class="page-link text-dark">...</a></li>
                <% } %>
            <% } %>
            <% if (current == pages) { %>
                <li class="disabled page-item"><a class="page-link text-dark">Last</a></li>
            <% } else { %>
                <li class="page-item"><a class="page-link text-dark" href="/articles/<%= pages %>">Last</a></li>
            <% } %>
        </ul>
    <% } %>
    </nav>

<%- include('./partials/footer'); %>