<%- include ('./partials/header') %>

<hr style="margin-top: 0px; margin-bottom: 0px; border-top: 2px solid rgb(240, 240, 240);">
<div style="padding-top: 50px;">
    <h1 class="text-uppercase" style="text-align: center;"><%= blog.title %></h1><br>
    <img src="<%= blog.image %>"><br><br>
    <%- blog.body %>
</div>
<script>
    let images = document.getElementsByTagName("img");
    for (let img of images) {
        img.classList.add('d-block');
        img.classList.add('mx-auto');
    }
</script>
<%- include('./partials/footer'); %>